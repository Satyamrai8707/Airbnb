<%-   include('../partials/head') %>

  </head>
  <body class="bg-gray-100 min-h-screen flex flex-col items-center font-sans">
    <!-- Navbar -->
    <%-   include('../partials/nav') %>


    <!-- Main Content -->
    <main class="w-full max-w-md bg-white p-6 rounded-lg shadow-md mt-10">
      <h2 class="text-2xl md:text-3xl font-bold text-pink-600 text-center mb-4">Register your home here</h2>
      <form action="/host/add-home" method="POST" class="flex flex-col space-y-4">
        <input
          type="text"
          name="housename"
          placeholder="Enter the name of the house"
          class="border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-pink-500"
          required
        />
        <input
        type="text"
        name="price"
        placeholder="Price per Night"
        class="border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-pink-500"
        required
      />
      <input
      type="text"
      name="location"
      placeholder="Location"
      class="border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-pink-500"
      required
    />
    <input
    type="text"
    name="rating"
    placeholder="Rating"
    class="border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-pink-500"
    required
  />
  <input
  type="text"
  name="photoUrl"
  placeholder="Enter Photo Url"
  class="border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-pink-500"
  required
/>
        <input
          type="submit"
          value="Register"
          class="bg-pink-600 text-white font-semibold py-2 rounded-md hover:bg-pink-700 transition duration-300 cursor-pointer"
        />
      </form>
    </main>
      <!-- Footer -->
      <%-   include('../partials/footer') %>

  </body>
</html>
